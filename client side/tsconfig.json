{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "types": ["node"],
        "baseUrl": "src",
        "paths": {
            // will be used for module resolution
            "components/*": ["components/*"],
            "config/*": ["config/*"],
            "images/*": ["images/*"],
            "layouts/*": ["layouts/*"],
            "pages/*": ["pages/*"],
            "services/*": ["services/*"],
            "store/*": ["store/*"],
            "styles/*": ["styles/*"],
            "typings/*": ["typings/*"],
            "utilities/*": ["utilities/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
